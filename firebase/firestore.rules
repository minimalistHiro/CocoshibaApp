rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function signedIn() {
      return request.auth != null;
    }

    function currentUserProfile() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isOwner() {
      return signedIn() && currentUserProfile().isOwner == true;
    }

    function isPrivileged() {
      return signedIn() &&
          (currentUserProfile().isOwner == true ||
              currentUserProfile().isSubOwner == true);
    }

    // Each user can read/write their own profile
    match /users/{userId} {
      allow read: if signedIn() &&
          (request.auth.uid == userId || isOwner());
      allow create: if signedIn() && request.auth.uid == userId;
      allow update: if signedIn() &&
          (request.auth.uid == userId ||
              (isOwner() &&
                  request.resource.data
                      .diff(resource.data)
                      .changedKeys()
                      .hasOnly(['points', 'updatedAt'])));
      allow delete: if signedIn() && request.auth.uid == userId;

      // Reactions under a user should be available to any signed-in user
      match /interested_events/{eventId} {
        allow read, write: if signedIn();
      }

      match /favorite_events/{eventId} {
        allow read, write: if signedIn();
      }

      match /home_page_reservations/{reservationId} {
        allow create, update: if isOwner();
      }

      match /pointHistories/{historyId} {
        allow read: if signedIn() && request.auth.uid == userId;
        allow create: if signedIn() && request.auth.uid == userId || isOwner();
      }

      // All subcollections under the user (e.g., interested_events, favorite_events, event_reservations)
      match /{subcollection=**}/{docId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Menus
    match /menus/{menuId} {
      allow read: if signedIn();
      allow create, update, delete: if isOwner();
    }

    // Notifications for users
    match /notifications/{notificationId} {
      allow read: if signedIn();
      allow create, update, delete: if isOwner();
    }

    // Notifications for owners (feedback, reservations, etc.)
    match /owner_notifications/{notificationId} {
      allow read: if isPrivileged();
      allow create, update, delete: if isOwner();
    }

    // Event listings
    match /events/{eventId} {
      allow read: if request.auth != null;
      allow create, update, delete: if isOwner();

      // Reservations under an event
      match /event_reservations/{uid} {
        allow read, write: if request.auth != null && request.auth.uid == uid;
      }

      // Interested users under an event
      match /interested_users/{uid} {
        allow read, write: if signedIn();
      }

      // Favorite users under an event
      match /favorite_users/{uid} {
        allow read, write: if signedIn();
      }
    }

    // Existing event master (used by favorites tab)
    match /existing_events/{eventId} {
      allow read: if request.auth != null;
      allow create, update, delete: if isOwner();

      match /favorite_users/{uid} {
        allow read, write: if signedIn();
      }
    }

    // Owner settings (point rate, contact info)
    match /owner_settings/{docId} {
      allow read: if signedIn();
      allow create, update, delete: if isOwner();
    }

    // Feedbacks submitted by users (owners can manage in console / admin UI)
    match /feedbacks/{feedbackId} {
      allow create: if signedIn();
      allow read, update, delete: if isOwner();
    }

    // Home page contents
    match /home_pages/{docId} {
      allow read: if true;
      // write should be restricted to admins/owners if needed

      match /reservations/{reservationId} {
        allow create: if signedIn() && request.resource.data.userId == request.auth.uid;
        allow read, update, delete: if isOwner();
      }
    }

    // Campaigns
    match /campaigns/{docId} {
      allow read: if request.auth != null;
      // write should be restricted to admins/owners if needed
    }
  }
}
